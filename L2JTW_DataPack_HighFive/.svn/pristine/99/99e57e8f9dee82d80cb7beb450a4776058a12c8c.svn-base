# ---------------------------------------------------------------------------
# PvP 相關設定
# ---------------------------------------------------------------------------
# The defaults are set to be retail-like. If you modify any of these settings your server will deviate from being retail-like.
# Warning: 
# Please take extreme caution when changing anything. Also please understand what you are changing before you do so on a live server.
# ---------------------------------------------------------------------------
# 性向設定
# ---------------------------------------------------------------------------
# 性向: 增加/減少
# 最少: 240
MinKarma = 240

# 最多: 10000
MaxKarma = 10000

# 依照經驗值來計算性向的增加/減少
# 預設: 260
XPDivider = 260

# 死亡時減少的性向，設定 0 表示死亡後移除所有性向
# 預設: 0
BaseKarmaLost = 0


# ---------------------------------------------------------------------------
# 紅人死亡掉落設定
# ---------------------------------------------------------------------------
# GM是否會掉落道具，預設: False
CanGMDropEquipment = False

# 注意：請確認以下列出的清單中
# 沒有包含空白的字元
# 以下清單中的寵物道具不會掉落
# 預設: 2375,3500,3501,3502,4422,4423,4424,4425,6648,6649,6650
ListOfPetItems = 2375,3500,3501,3502,4422,4423,4424,4425,6648,6649,6650

# 以下清單中的道具不會掉落
# 例如: 57(金幣)不會掉落
# 預設: 57,1147,425,1146,461,10,2368,7,6,2370,2369,6842,6611,6612,6613,6614,6615,6616,6617,6618,6619,6620,6621,7694,8181,5575,7694,9388,9389,9390
ListOfNonDroppableItems = 57,1147,425,1146,461,10,2368,7,6,2370,2369,6842,6611,6612,6613,6614,6615,6616,6617,6618,6619,6620,6621,7694,8181,5575,7694,9388,9389,9390

# 紅人死亡時，掉落的最少數量，預設: 6
MinimumPKRequiredToDrop = 6


# ---------------------------------------------------------------------------
# 其它
# ---------------------------------------------------------------------------
# 一般玩家殺死紅人玩家，是否會增加 PVP 值
# 預設: False
AwardPKKillPVPPoint = False

# 攻擊一般玩家時，變成 PvP 紫名狀態的時間 (以微秒為單位)
# 預設: 120000
PvPVsNormalTime = 120000

# 攻擊紫名玩家時，變成 PvP 紫名狀態的時間 (以微秒為單位)
# 預設: 60000
PvPVsPvPTime = 60000